#%RAML 1.0 ResourceType
displayName: books
description: Describing book

post:
  description: Add a new book to catalogue
  body:
    application/json:
      example:
        {
          "Id": "24",
          "Title": "Matilda",
          "Author": "Rohald Dahl",
          "Price": "$5.21"
        }
  responses: 
    201:
      body:
        application/json:
          example:
            {
              "Id": "24",
                "Title": "Matilda",
                "Author": "Rohald Dahl",
                "Price": "$5.21"
            }
    500:
      body:
        application/json:
          example:
            {
              "errorMessage": "The book couldn't be entered."
            }        
            