#%RAML 1.0
title: Book Catalogue
version: 1.0
baseUri: http://localhost:8081/api

/catalogue:
  /books:
    displayName: books
    post:
      description: Add a new book to catalogue
      body:
        application/json:
          example: |
            {
              "Id": "24",
              "Title": "Matilda",
              "Author": "Rohald Dahl",
              "Price": "$5.21"
            }
      responses:
        201:
          body:
            application/json:
              example: |
                {
                  "Id": "24",
                  "Title": "Matilda",
                  "Author": "Rohald Dahl",
                  "Price": "$5.21"
                }
        500:
          body:
            application/json:
              example: |
                {
                  "errorMessage": "The book couldn't be entered."
                }    
    /booklist:
        displayName: booklist 
        post:
          description: Add a new book to file
          body:
            application/json:
              example: |
                {
                  "Id": "24",
                  "Title": "Matilda",
                  "Author": "Rohald Dahl",
                  "Price": "$5.21"
                }
          responses:
            201:
              body:
                application/json:
                  example: |
                    {
                      "Id": "24",
                      "Title": "Matilda",
                      "Author": "Rohald Dahl",
                      "Price": "$5.21"
                    }
            500:
              body:
                application/json:
                  example: |
                    {
                      "errorMessage": "The book couldn't be entered."
                    }    